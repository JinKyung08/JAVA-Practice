	  System.out.println(list1.size());
	  list1.add(100);
	  System.out.println(list1);
	  System.out.println(list1.size());
	 
	  
	  list1.add(3,5);
	  System.out.println(list1);
	  System.out.println(list1.size());
	  
	  List<String> list3 = new ArrayList<String>();
