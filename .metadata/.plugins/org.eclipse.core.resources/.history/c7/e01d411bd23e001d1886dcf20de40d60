package classGetterSetterExam;

import java.util.Scanner;

public class WeightControlMain {

	public static void main(String[] args) {
		double changeW =0.0;
		
		WeightControl wc = new WeightControl("홍길동", 171.5, 59.5);
		
		//현재 정보 출력
		System.out.println("이름 : " + wc.getName());
		System.out.println("키 : " + wc.getHeight());
		System.out.println("몸무게 : " + wc.getWeight());
		System.out.println();
		
		//변화 몸무게 입력
		
		Scanner scan = new Scanner(System.in);
		System.out.println("변화된 몸무게를 입력해주세요");
		System.out.println("증가 : 양수 , 감소 :  음수 , 변화없음 : 0으로 입력해주세요");
		System.out.println();
		
		if(changeW > 0.0) {
			wc.gainWeight(changeW);
		}else if (changeW<0.0) {
			wc.reduceWeight(changeW);
		}else {
			System.out.println("몸무게 변화가 없습니다.");
			System.out.println("현재몸무게 : " + wc.getWeight()+"kg");
		}
		
	}

}
